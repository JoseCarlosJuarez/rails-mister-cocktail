
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Create a new Cocktail</h2>
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.input :name %>
            
            <%= f.input :photo, as: :file%>

            <%= f.submit "add a cocktail", class: "btn btn-primary" %>
          <% end %>
    </div>
  </div>
</div>