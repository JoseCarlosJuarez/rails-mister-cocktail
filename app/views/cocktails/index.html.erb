

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item d-flex justify-content-between">
            <%= cocktail.name %>
            <div>
              <%= link_to "see cocktail", cocktail_path(cocktail) %>
              <%= link_to "destroy cocktail", cocktail_path(cocktail), method: :delete %>
            
            </div>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

